{
  "simulation": {
    // Number of parallel workers to run simulations
    "workers":          4,        // int

    // Wave spectrum parameters
    "Hs":               [4.5],    // Significant wave height [m], float[]
    "Tp":               [7.5],    // Peak wave period [s], float[]
    "gamma":            [3.3],    // Spectrum peakedness [-], float[]
    "depth":            [100],    // Water depth [m], float[]

    // Spatial domain settings
    "length":           3000,     // Domain length [m], float
    "gravity":          9.81,     // Gravitational acceleration [m/s²], float

    // Simulation configuration
    "modes":            256,      // Total number of spectral modes, int
    "mHOS":             8,        // Order of nonlinearity in HOS method, int
    "Ta":               50,       // Dommermuth initialization time [s], float

    // Temporal integration parameters
    "time":             5,        // Total simulation duration [s], float
    "step_size":        0.025,    // RK4 time step size [s], float
    "output_interval":  20,       // Output every N steps, int

    // Two‑dimensional wave spreading
    "2d":               true,     // Enable 2D directional spectrum, bool
    "beta":             [0.1]     // Spreading parameter in [0, π/2], float[]
  }
}
